{
  "info": {
    "_postman_id": "ecomptaia-auth-test-corrected",
    "name": "E-COMPTA-IA - Test Authentification Corrigé",
    "description": "Collection corrigée pour tester l'authentification avec les bons endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Tests de Base",
      "item": [
        {
          "name": "Test Public",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/test/public",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Test Auth Endpoint",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/test",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        },
        {
          "name": "Nombre d'utilisateurs",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/api/auth/users/count",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ]
          }
        }
      ]
    },
    {
      "name": "2. Tests d'Authentification",
