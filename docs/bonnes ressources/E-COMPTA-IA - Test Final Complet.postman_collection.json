{
  "info": {
    "_postman_id": "ecomptaia-test-final-complet",
    "name": "E-COMPTA-IA - Test Final Complet",
    "description": "Collection finale complète pour tester tous les modules avec authentification JWT fonctionnelle",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
